{
    "name": "Node.js Dev Container",
    "dockerFile": "Dockerfile",
    "context": ".",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "GitHub.copilot",
                "formulahendry.auto-rename-tag",
                "github.vscode-github-actions",
                "timonwong.shellcheck",
                "svelte.svelte-vscode",
                "bradlc.vscode-tailwindcss",
                "vitest.explorer",
                "ms-azuretools.vscode-docker",
                "Prisma.prisma",
                "jgclark.vscode-todo-highlight",
                "ms-vscode.vscode-speech",
                "naumovs.color-highlight",
                "anseki.vscode-color",
                "mhutchie.git-graph",
                "GitHub.copilot-chat",
                "eamodio.gitlens",
                "heybourn.headwind",
                "ms-playwright.playwright",
                "mike-co.import-sorter"
            ]
        }
    },
    "appPort": [
        3000,
        3004,
        3005,
        4173,
        5173,
        5555
    ],
    "forwardPorts": [
        3000,
        3004,
        3005,
        4173,
        5173,
        5555
    ],
    "postCreateCommand": "yes | pnpm install",
    "workspaceMount": "source=${localWorkspaceFolder},target=/equipped,type=bind,consistency=cached",
    "workspaceFolder": "/equipped",
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/root/.ssh:ro,type=bind"
    ],
    "remoteEnv": {},
    "remoteUser": "root"
}